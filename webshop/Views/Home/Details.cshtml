@model webshop.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 d-flex justify-content-center">
            <img src="~/images/Products/@Model.Image" alt="@Model.Name" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6">
            <h1 class="display-5">@Model.Name</h1>
            <p class="text-muted">Категория: @Model.Category</p>
            <h3 class="text-success mb-3">Цена: @Model.Price р.</h3>
            <p>@Model.Description</p>
            <div class="d-flex gap-2 mt-4">
                <form class="add-to-cart-form" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary">Добавить в корзину</button>
                </form>
            </div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Назад к каталогу</a>
        </div>
    </div>  
</div>
